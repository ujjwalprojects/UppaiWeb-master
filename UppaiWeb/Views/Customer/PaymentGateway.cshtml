@model UppaiWeb.ViewModels.utblOrderDetail
@{
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}
<div class="menu-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="menu-title">
                    <h2>Payment Gatway</h2>
                    <ul class="custom_breadcrumb">
                        <li><a href="/home/index"><i class="fa fa-home"></i> Home</a></li>
                        <li><a href="/customer/PaymentMode/@ViewBag.OrderID"><i class="fas fa-rupee-sign"></i> Payment Mode</a></li>
                        <li><i class="fas fa-torii-gate"></i> Payment Gateway</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="customcard pb-3">
                    <div class="row">
                        <div class="col-md-12">
                            <h2 class="mt-2 pb-0">Payment Gateway</h2>
                        </div>
                    </div>
                    <hr class="mb-2" />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-4 text-left">
                                    <span>Order #:</span><strong> @Model.OrderID</strong>
                                </div>
                                <div class="col-md-4 text-center">
                                    <span>Date:</span><strong> @Model.OrderDate.ToString("dd MMM yyyy")</strong>
                                </div>
                                <div class="col-md-4 text-right">
                                    <span>Order Amount:</span><strong><i class="fa fa-rupee"></i> @Model.TotalAmt.ToString("0.00")</strong>
                                </div>

                                <div class="col-md-12 mb-2">
                                    <button type="submit" class="btn btn-warning btn-sm float-right"> Pay <i class="fa fa-rupee"></i> @Model.TotalAmt.ToString("0.00") </button>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>


@*error message*@
<div id="ErrMsg" style="display:none;">
    <input type="hidden" id="ErrMsgHiddenField" name="ErrMsg" value="@TempData["ErrMsg"]" />
</div>
